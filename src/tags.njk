---
layout: layouts/base.njk
title: Tags
description: A list of all blog tags.
fontPreload: true
---

<div class="flex flex-col h-dvh justify-between">
  {% include "components/navigation.njk" %}
  <div class="max-w-7xl mx-auto mb-auto w-full px-5 mt-8">
    <h1 class="text-xl md:text-2xl lg:text-3xl font-bold text-white mb-5">{{ title }}</h1>
    <ul class="flex flex-wrap gap-x-4 gap-y-2">
      {% for tag in collections.getTags %}
        {% if tag != 'posts' %}
          <li class="text-base md:text-lg text-white">
            <a
              href="/tags/{{ tag | slugify }}/"
              class="focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-300"
            >
              <span
                class="
                  decoration-dashed underline
                  hover:text-blue-300 hover:decoration-solid
                  active:text-purple-300 active:no-underline
                "
              >
                #{{ tag }}
              </span>
            </a>
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>
  {% include "components/footer.njk" %}
</div>
