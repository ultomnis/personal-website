<section
  id="intro"
  class="relative w-full"
>
  <div class="bg-[url('/assets/images/intro-bg.jpg')] bg-cover bg-center bg-no-repeat h-dvh flex">
    <div class="absolute inset-0 bg-black/50 z-0"></div>
    <div class="max-w-7xl mx-auto flex justify-center h-full w-full z-10 px-5">
      <div class="flex flex-col justify-center text-white">
        <h2 class="text-2xl sm:text-3xl md:text-4xl">Hello,</h2>
        <h1 class="mt-6 text-3xl sm:text-4xl md:text-5xl font-bold">I'm James Yu</h1>
        <p class="mt-3 text-lg text-gray-300">Software developer and IT specialist</p>
        <div class="flex mt-5 space-x-4 items-center">
          <a
            href="mailto:contact@jmsyu.com"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Email"
          >
            {% inlineSvg "mail.svg", "32", "32", "fill-gray-400 transition-colors duration-200 hover:fill-gray-100" %}
          </a>
          <a
            href="https://github.com/ultomnis"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub"
          >
            {% inlineSvg "github.svg", "32", "32", "fill-gray-400 transition-colors duration-200 hover:fill-gray-100" %}
          </a>
          <a
            href="https://linkedin.com/in/jmsyu"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn"
          >
            {% inlineSvg "linkedin.svg", "32", "32", "fill-gray-400 transition-colors duration-200 hover:fill-gray-100" %}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
