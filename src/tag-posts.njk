---
layout: layouts/base.njk
eleventyComputed:
  title: "Tagged {{ tag }}"
  description: "List of posts tagged {{ tag }}"
eleventyExcludeFromCollections: true
pagination:
  data: collections.postsByTag
  size: 1
  alias: tag
  filter:
    - posts
permalink: /tags/{{ tag | slugify }}/
fontPreload: true
---

<div class="flex flex-col h-dvh justify-between">
  {% include "components/navigation.njk" %}
  <div class="max-w-7xl mx-auto mb-auto w-full px-5 mt-8">
    <h1 class="text-xl md:text-2xl lg:text-3xl font-bold text-white mb-5">{{ title }}</h1>
    <div class="flex flex-col">
      <ul>
        {% for post in collections[tag] | reverse %}
          <li>
            {% if loop.index0 == 0 %}
              <hr class="border-t-1 border-gray-600 my-2">
            {% endif %}
            <div class="flex flex-col sm:flex-row justify-between items-center">
              <h2 class="text-base md:text-lg lg:text-xl text-white">
                <a
                  href="{{ post.url }}"
                  class="
                    decoration-dashed underline underline-offset-6
                    hover:text-blue-300 hover:decoration-solid
                    active:text-purple-300 active:no-underline
                    focus-visible:outline-2 focus-visible:outline-offset-0 focus-visible:outline-blue-300
                  "
                >
                  {{ post.data.title }}
                </a>
              </h2>
              <time
                class="text-xs md:text-sm lg:text-base text-gray-300 whitespace-nowrap"
                datetime="{{ post.date | htmlDate }}"
              >
                {{ post.date | naturalDate }}
              </time>
            </div>
            <hr class="border-t-1 border-gray-600 my-2">
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
  {% include "components/footer.njk" %}
</div>
