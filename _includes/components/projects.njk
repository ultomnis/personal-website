<section
  id="projects"
  class="mt-12"
>
  <div class="max-w-7xl mx-auto px-5">
    <h3 class="text-xl md:text-2xl lg:text-3xl font-bold text-black dark:text-white mb-5">Open-Source Projects</h3>
    <div class="flex flex-col gap-y-5">
      {% for project in projectList.projects %}
        <a
          href="{{ project.link }}"
          target="_blank"
          rel="noopener noreferrer"
          class="
            flex flex-col bg-gray-200 dark:bg-gray-800 rounded-lg p-4 transition-transform duration-200
            hover:-translate-y-1 hover:translate-x-1
            focus-visible:outline-2 focus-visible:outline-offset-0 focus-visible:outline-blue-300
          "
        >
          <h4 class="text-base md:text-lg lg:text-xl text-black dark:text-white">
            <span
              class="
                decoration-dashed underline underline-offset-6
                hover:text-blue-700 dark:hover:text-blue-300 hover:decoration-solid
                active:text-purple-700 dark:active:text-purple-300 active:no-underline
              "
            >
              {{ project.name }}
            </span>
          </h4>
          <p class="text-sm md:text-base lg:text-lg text-gray-700 dark:text-gray-300 mt-5">{{ project.description }}</p>

          <ul class="flex flex-wrap gap-2 sm:gap-3 pt-5">
            {% for tool in project.toolkit %}
              <li class="px-3 py-2 rounded-2xl bg-gray-50 dark:bg-gray-950 text-gray-700 dark:text-gray-300 text-xs md:text-sm whitespace-nowrap">
                {{ tool }}
              </li>
            {% endfor %}
          </ul>
        </a>
      {% endfor %}
    </div>
  </div>
</section>
