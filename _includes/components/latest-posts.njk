<section
  id="latest-posts"
  class="mt-12"
>
  <div class="max-w-7xl mx-auto px-5">
    <h2 class="text-xl sm:text-2xl md:text-3xl font-bold text-white mb-5">Latest Posts</h2>
    <div class="flex flex-col">
      <ul>
        {% for post in collections.posts | reverse | head(3) %}
          <li>
            {% if loop.index0 == 0 %}
              <hr class="border-t-1 border-gray-600 my-2">
            {% endif %}
            <div class="flex flex-col sm:flex-row justify-between items-center">
              <a href="{{ post.url }}">
                <h3 class="text-base sm:text-lg md:text-xl text-white">
                  <span class="hover:text-blue-300 hover:underline">{{ post.data.title }}</span>
                </h3>
              </a>
              <time
                class="text-xs sm:text-sm md:text-base text-gray-300 whitespace-nowrap"
                datetime="{{ post.date | htmlDate }}"
              >
                {{ post.date | naturalDate }}
              </time>
            </div>
            <hr class="border-t-1 border-gray-600 my-2">
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</section>
